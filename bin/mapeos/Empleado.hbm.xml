<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="datos.Cliente" table="cliente">
	
		<id column="idCliente" name="idCliente">
			<generator class="identity" />
		</id>
		<property column="nombre" name="nombre" type="string" />
		<property column="apellido" name="apellido" type="string" />
		<property column="dni" name="dni" type="long" />
		<property column="email" name="email" type="string" />
		<property column="movil" name="movil" type="string" />
		<property column="telefono" name="telefono" type="string" />
		<property column="estado" name="estado" type="boolean" />
		
		<many-to-one name="turnos" class="datos.Turno"column="idTurno" not-null="true" />
		
	</class>
	
</hibernate-mapping>